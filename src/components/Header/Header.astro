---
import Logo from './Logo.astro';
import Navigation from './Navigation.astro';
import ThemeToggle from './ThemeToggle.astro';
---

<header class="fixed top-0 left-0 right-0 bg-white/80 dark:bg-black/80 backdrop-blur-sm border-b border-gray-100 dark:border-gray-800 z-50 animate-fade-in">
  <div class="max-w-3xl mx-auto px-4 py-4 sm:py-6 flex justify-between items-center">
    <Logo name="Tiwa Adejuyigbe" />
    <div class="flex items-center space-x-4 sm:space-x-6">
      <Navigation />
      <ThemeToggle />
    </div>
  </div>
</header>
<div class="h-16 sm:h-20"></div>
